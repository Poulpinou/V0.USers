<% @comments.each do |comment|%>
  <div class="comment">
    <% user = comment.get_user %>
    <div class="row">

      <div class= "col-sm-2">
        <img src=<%= user.picture %> >
      </div>

      <div class= "col-sm-10">
        <div class="comment-text">
          <h3> 
            <%= link_to user.pseudo, profile_path(user.id) %> 
            <small>  - <%= comment.created_at.strftime("%Y-%d-%m %H:%M:%S")%> </small>
          </h3>
          <h4><% 0.upto(5){%> &nbsp; <%}%> <%= comment.content %></h4>
        </div>
      </div>

    </div>
  </div>
<% end %>