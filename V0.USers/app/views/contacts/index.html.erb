    </div>

    <div class="col-sm-5">
      <h2>Hire</h2>
      <table>
        <thead>
          <tr>
            <th>Sender</th>
            <th>Object</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <%= render @contacts.where("aim = 'hire'").limit(10) %>
