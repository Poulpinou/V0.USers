<div class="container">
    <div class="row">

        <div class="col-sm-7">
            <h2>Mail from <%= link_to @sender.pseudo, @sender %></h2>
        </div>

        <div class="col-sm-3">
            <div class="mail-btn">
                <%= button_to_with_icon("<i class='fa fa-#{@contact.star}' aria-hidden='true'></i>", @contact, action: :switch_fav)%>
                <%= button_to_with_icon("<i class='fa fa-paper-plane' aria-hidden='true'></i>", @contact, action: :send_mail)%><!-- To Do -->
                <%= button_delete_with_icon("<i class='fa fa-trash-o' aria-hidden='true'></i>", @contact, method: :delete, data: { confirm: 'Are you sure?' })%>
            </div>
        </div>

        <div class="col-sm-2"></div>

    </div>
    <hr>
    <div class="row">

        <div class="col-sm-9">
            <div class="mail-content">
                <p><%= @contact.created_at.strftime("On %A %B %Y at %H:%M")%></p>
                <h3><%= @contact.content.html_safe %></h3>
            </div>
            <div class="foot-btn">
                <%= link_to 'Back', contacts_path%>
            </div>
            <br>
        </div>

        <div class="col-sm-3">
            <h2>Sender's profile</h2><hr>
            <div class="sender-profile">
                <h3><img src="<%= @sender.picture %>" class="avatar-medium"> <%= link_to @sender.pseudo, @sender %> <small> - <%= @sender.role %></small></h3>
                <h4><label>Mail: </label> <%= @sender.email %></h4>
                <h4><label>Suscribed: </label> <%= @sender.ago %></h4>
                <h4><label>Ideas: </label> <%= @sender.idea.count %></h4>
                <!-- Make a button which send an answer -->
            </div>
        </div>

    </div>
</div>


