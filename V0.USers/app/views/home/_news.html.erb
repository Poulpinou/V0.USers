<% @news.each do |news|%>
<div class="news">
    <div class="row">

        <div class="col-sm-10">
            <%= news.created_at.strftime("On %A %B %Y at %H:%M")%>
        </div>

        <div class="col-sm-2">
            <%= news.label %>
        </div>

    </div>
    <hr>
    <div class="content-news">
        <%= news.content.html_safe %>
    </div>
</div>
<% end %>