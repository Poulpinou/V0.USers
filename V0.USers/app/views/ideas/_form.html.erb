<%= form_for(idea) do |f| %>
  <% if idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class= "container">
    <div class="row">
      <div class= "centered">
      <!-- Fields -->
        <div class="col-sm-6">
          <h2>Describe your idea...</h2>

          <br>
          <h2>
            <div class="field">
              <%= f.label "Title" %>
              <%= f.text_field :title %>
            </div>

            <br>

            <div class="field">
              <%= f.label "Summary" %>
              <%= f.text_field :description %>
            </div>

            <br>

            <div class="field">
              <%= f.label "Description" %>
              <%= f.text_field :content %>
            </div>
          </h2>

        </div>

        <!-- Choose picture -->
        <div class="col-sm-6">
          <h2>... And bring images!</h2>
          

          <h2>With Url</h2>
          <br>
          <br>

        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
