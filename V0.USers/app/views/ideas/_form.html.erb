<%= form_for(idea) do |f| %>
  <% if idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class= "container">
    <div class="row">
      <div class= "centered">
      <!-- Fields -->
        <div class="col-sm-6">
          <h2>Describe your idea...</h2>

          <br>
            <div class="field">
             <h2> <%= f.label "Title" %></h2>
              <%= f.text_field :title, maxlength: 32 %>
            </div>

            <br>

            <div class="field">
              <h2><%= f.label "Summary" %></h2>
              <h4><%= f.text_area(:description, cols: 60, rows: 5, maxlength: 200, style:"overflow:auto;resize:none") %></h4>
            </div>

            <br>

            <div class="field">
              <h2><%= f.label "Description" %></h2>
              <%= f.cktext_area(:content, cols: 60, rows: 10) %>
            </div>

        </div>

        <!-- Choose picture -->
        <div class="col-sm-6">
          <h2>... And bring images!</h2>
          

          <h2>With Url</h2>
          <br>
          <br>

        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
