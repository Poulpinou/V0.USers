<%= form_for(idea) do |f| %>
  <% if idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class= "container">
    <div class="row">
      <div class= "centered">
      <!-- Fields -->
        <div class="col-sm-12">
            <div class="field">
             <h2> <%= f.label "Title" %></h2>
              <%= f.text_field :title, maxlength: 32 %>
            </div>

            <br>

            <div class="field">
              <h2><%= f.label "Summary" %></h2>
              <h4><%= f.text_area(:description, style:"resize:none", maxlength:256, cols:40, rows:5) %></h4>
            </div>

            <br>

            <div class="field">
              <h3> <%= f.label "Label" %><small> - Choose a label helps us to give faster answers</small></h3>
              <%= f.select(:label_id, options_for_select(Label.kind(:subject,true)))%>
            </div>

            <br>

            <div class="field">
              <h2><%= f.label "Description" %></h2>
              <%= f.cktext_area(:content, cols: 60, rows: 10) %>
            </div>

        </div>

      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
