<%= form_for(label) do |f| %>
  <% if label.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(label.errors.count, "error") %> prohibited this label from being saved:</h2>

      <ul>
      <% label.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6">

      <div class="field">
        <h2> <%= f.label "Name" %></h2>
        <%= f.text_field :name, maxlength: 9 %>
      </div>

      <div class="field">
        <h2> <%= f.label "Category" %></h2>
        <%= f.select(:category, options_for_select(Label.categories))%>
      </div>

      <div class="field">
        <h2> <%= f.label "Details" %></h2>
        <%= f.text_area :details, maxlength: 100 %>
      </div>

      
    </div>

    <div class="col-sm-6">
      <h2>Color : <%= f.color_field(:color)%></h2>

      <noscript>
      You need Javascript to get preview
      </noscript>
      <div id="preview" class='container'> This is how your label will look like
        <div id="color">
          <div id="Displayname"></div>
        </div>
      </div>
      

      <div class="clear"></div>
    </div>

    
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


